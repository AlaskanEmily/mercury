include ../Mmake.common

CC	= gcc
CFLAGS	=

mkinit:	mkinit.c
	$(CC) $(CFLAGS) -o mkinit mkinit.c

.PHONY: install
install: mkinit
	[ -d $(INSTALL_BINDIR) ] || mkdir -p $(INSTALL_BINDIR)
	cp mkinit $(INSTALL_BINDIR)

# suppress the default Mmake rule which removes all the .c files
CLEAN_C =

clean:
	-rm -f mkinit.o

realclean:
	-rm -f mkinit.o mkinit
