#-----------------------------------------------------------------------------#

main_target: check

include ../Mmake

#-----------------------------------------------------------------------------#

PROGS=	arithmetic disj_disj interpreter \
	nasty_nondet nondet_disj nondet_ite petdr1 \
	string__format_test string_test string_test_2 univ \
	environment

# float_test doesn't work because io__write_float
# prints a different number of digits in the C / NU-Prolog implementations.

DEPENDS=$(PROGS:%=%.depend)
OUTS=	$(PROGS:%=%.out)
EXPS=	$(PROGS:%=%.exp)
RESS=	$(PROGS:%=%.res)
MODS=	$(PROGS:%=%.mod)

depend: $(DEPENDS)

check: $(EXPS) $(OUTS) $(RESS)

mods: $(MODS)

all:	$(PROGS)

#-----------------------------------------------------------------------------#
