#-----------------------------------------------------------------------------#

main_target: check

include ../Mmake.common

#-----------------------------------------------------------------------------#

SOURCES= \
	bigtest.m \
	circ_type.m \
	constructor_warning.m \
	det_errors.m \
	funcs_as_preds.m \
	errors.m \
	errors1.m \
	errors2.m \
	external.m \
	io_in_ite_cond.m \
	missing_det_decls.m \
	modes_erroneous.m \
	mostly_uniq1.m \
	mostly_uniq2.m \
	occurs.m \
	pragma_c_code_and_clauses1.m \
	pragma_c_code_and_clauses2.m \
	qualified_cons_id2.m \
	prog_io_erroneous.m \
	type_loop.m \
	undef_lambda_mode.m \
	undef_type.m

# we do not yet pass the following tests:
#	freefree.m
#	no_exports.m \
#	types.m

DEPS=		$(SOURCES:%.m=%.dep)
DEPENDS=	$(SOURCES:%.m=%.depend)
ERRS=		$(SOURCES:%.m=%.err)
ERR_RESS=	$(SOURCES:%.m=%.err_res)	# not yet used

%.err: %.m
	if mc --errorcheck-only $* > $*.err 2>&1; then false; else true; fi

%.err_res: %.err %.err_exp
	-rm -f $@
	diff -c $*.err_exp $*.err > $@

all:	check

check:	$(ERRS) $(ERR_RESS)

errs:	$(ERRS)

depend:

clean:
	rm -f *.c *.o *.err *.err2 *.d *.err_res

#-----------------------------------------------------------------------------#
