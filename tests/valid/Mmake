#	unused_args_test2.m

OBJS =	$(SOURCES:%.m=%.o)
NOS =	$(SOURCES:%.m=%.no)
PROGS =	$(SOURCES:%.m=%)

all:	objs

# we need to pass some options to really test middle_rec_labels.m
middle_rec_labels.c: middle_rec_labels.m
	$(MCG) $(MCGFLAGS) --middle-rec --no-follow-vars middle_rec_labels.m

two_way_unif.c: two_way_unif.m
	$(MCG) $(MCGFLAGS) -O-1 two_way_unif.m

check:	objs

objs:	$(OBJS)

depend:

printtests:
	@echo $(PROGS)

clean:
	rm -f *.c *.o *.err2 *.d *.h

