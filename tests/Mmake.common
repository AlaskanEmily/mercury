#-----------------------------------------------------------------------------#

MGNUCFLAGS=-g

HAVE_NUPROLOG=$(shell if grep `uname -n` ../NUPROLOG > /dev/null 2>&1 ; then echo yes ; else echo no ; fi)

#-----------------------------------------------------------------------------#

# .PRECIOUS: %.mod %.c %.o %_init.c %.no %.nu %_init.nl %_init.no

%_init.c: Entry

%.out: %
	{ [ -f $*.inp ] && cat $*.inp; } | ./$< > $@ 2>&1;

ifeq ($(HAVE_NUPROLOG),yes)
%.exp: %.nu
	{ [ -f $*.inp ] && cat $*.inp; } | ./$< > $@ 2>&1;
endif

%.res: %.exp %.out
	-rm -f $@
	diff -u $*.exp $*.out > $@

#-----------------------------------------------------------------------------#

clean: clean_out clean_res

clean_mc: clean_c clean_o clean_out clean_res

clean_out:
	rm -f *.out

clean_exp:
	rm -f *.exp

clean_res:
	rm -f *.res

#-----------------------------------------------------------------------------#

test:
	@echo $(HAVE_NUPROLOG)
