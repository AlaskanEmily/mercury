# Mmake - Mmake file for the Mercury util library

MAIN_TARGET=all

#-----------------------------------------------------------------------------#

MERCURY_DIR=..
include ../Mmake.common

#-----------------------------------------------------------------------------#

MGNUC	= ../scripts/mgnuc
CFLAGS	= -I ../runtime

#-----------------------------------------------------------------------------#

all: mkinit

mkinit:	mkinit.c
	$(MGNUC) -s $(GRADE) $(CFLAGS) -o mkinit mkinit.c

#-----------------------------------------------------------------------------#

.PHONY: install
install: mkinit
	[ -d $(INSTALL_BINDIR) ] || mkdir -p $(INSTALL_BINDIR)
	cp mkinit $(INSTALL_BINDIR)

#-----------------------------------------------------------------------------#

# suppress the default Mmake rule which removes all the .c files
CLEAN_C =

clean:
	-rm -f mkinit.o

realclean:
	-rm -f mkinit.o mkinit

#-----------------------------------------------------------------------------#
