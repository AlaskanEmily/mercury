#-----------------------------------------------------------------------------#

main_target: check

#-----------------------------------------------------------------------------#

PROGS= pragma_c_code_unused_var

#-----------------------------------------------------------------------------#

%.res:	%.exp %.err
	-rm -f $@
	diff $*.exp $*.err > $@

#-----------------------------------------------------------------------------#

DEPENDS=$(PROGS:%=%.depend)
ERRS=	$(PROGS:%=%.err)
RESS=	$(PROGS:%=%.res)

#-----------------------------------------------------------------------------#

depend: $(DEPENDS)

check: $(ERRS) $(RESS)

all:	$(PROGS)

clean: clean_err clean_res

clean_mc: clean_c clean_o clean_err clean_res

clean_err:
	rm -f *.err

clean_res:
	rm -f *.res


#-----------------------------------------------------------------------------#
