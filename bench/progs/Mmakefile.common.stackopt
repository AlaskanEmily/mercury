ifeq ($(ENABLE),yes)
ENABLE_FLAG = --optimise-saved-vars-cell
else
ENABLE_FLAG =
endif

MMC = lmc6
MCFLAGS = -$(OPTLEVEL) $(PROG_MCFLAGS) $(ENABLE_FLAG) \
		--osv-node-ratio $(ONR) --osv-allpath-node-ratio $(ANR)
#		--intermodule-optimization \
#		--transitive-intermodule-optimization
MGNUCFLAGS = --inline-alloc -DML_OMIT_MATH_DOMAIN_CHECKS
MLFLAGS = --static

MAIN_TARGET = all

.PHONY: all
all:	$(PROG).$(ENABLE).$(ONR).$(ANR)

.PHONY: depend
depend: $(PROG).depend

$(PROG).$(ENABLE).$(ONR).$(ANR): $(PROG)
	cp $(PROG) $(PROG).$(ENABLE).$(ONR).$(ANR)

.PHONY: times
times:	$(PROG).$(ENABLE).$(ONR).$(ANR)
	( \
	echo -n "$(NAME).$(ENABLE).$(ONR).$(ANR) " ; \
	../dotime $(PROG).$(ENABLE).$(ONR).$(ANR) $(ARGS) ; \
