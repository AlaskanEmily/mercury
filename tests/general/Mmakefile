#-----------------------------------------------------------------------------#

main_target: check

include ../Mmake.common

#-----------------------------------------------------------------------------#

ifeq ($(HAVE_NUPROLOG),yes)
%.exp: %.nu
	{ [ -f $*.inp ] && cat $*.inp; } | ./$< > $@ 2>&1;
endif

#-----------------------------------------------------------------------------#

# Any program added here should also be added to the `.cvsignore' file.

PROGS=		array_test \
		commit_bug \
		commit_bug_2 \
		disj_disj \
		dnf \
		hello_again \
		interpreter \
		nasty_nondet \
		nondet_disj \
		nondet_ite \
		nondet_ite_3 \
		nondet_ite_4 \
		nondetlive \
		partition \
		semidet_lambda \
		\
		arithmetic \
		det_complicated_unify \
		determinism_inlining \
		double_error \
		double_error2 \
		duplicate_label \
		environment \
		fail_detism \
		float_test \
		frameopt_mkframe_bug \
		higher_order \
		intermod_type \
		liveness \
		liveness2 \
		mode_inf_bug \
		mode_inf \
		mu \
		nondet_ite_2 \
